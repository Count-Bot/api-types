{
  "compilerOptions": {
    "alwaysStrict": true,
    "target": "es6",
    "lib": ["ESNext"],
    "module": "nodenext",
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "removeComments": false,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "declaration": true,
    "strictFunctionTypes": true,
    "sourceMap": true,
    "skipLibCheck": true
  },
  "include": ["v1.ts", "payloads/**/*.ts", "rest/**/*.ts", "utils/**/*.ts"]
}
